<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFB482"
    tools:context=".AssignInfo">

    <TextView
        android:id="@+id/assign_trans_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/amiko_bold"
        android:text="Assignments"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.658" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="433dp"
        android:layout_height="588dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="50dp"
        tools:layout_editor_absoluteX="-13dp"
        tools:layout_editor_absoluteY="162dp">

        <LinearLayout
            android:layout_width="398dp"
            android:layout_height="548dp"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:padding="0dp"
            android:paddingStart="15dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/assign_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Assignment"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/assign_course_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Course"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/start_date_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Should Start:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Start"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/due_date_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Due Date"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/due_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Due Date"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/desc_title_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Description"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc_assign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="AAAA BBB CCCC DDDD EEE FFFF GGGG HHHH III."
                android:textColor="#8B8B8B" />

            <LinearLayout
                android:layout_width="371dp"
                android:layout_height="82dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="20dp">

                <Button
                    android:id="@+id/complete_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:background="#5763B5"
                    android:text="Completed?"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/delete_assign_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#5763B5"
                    android:text="Delete"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>