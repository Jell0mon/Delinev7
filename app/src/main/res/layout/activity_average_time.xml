<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFB482"
    android:backgroundTint="#FFB482"
    tools:context=".AverageTime">

    <TextView
        android:id="@+id/assign_trans_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amiko_bold"
        android:padding="40dp"
        android:paddingStart="10dp"
        android:text="Assignments"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="419dp"
        android:layout_height="618dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assign_trans_title">

        <LinearLayout
            android:layout_width="439dp"
            android:layout_height="593dp"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:padding="0dp"
            android:paddingStart="15dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/assign_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Assignment"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/assign_course_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Course"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/how_long_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How long did this assignment take?"
                android:textColor="#030303"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/time_edit"
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Time in minutes"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="#000000"
                android:textColorHint="#BEBEBE" />

            <LinearLayout
                android:layout_width="371dp"
                android:layout_height="82dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="20dp">

                <Button
                    android:id="@+id/complete2_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:background="#161F44"
                    android:minHeight="48dp"
                    android:text="Complete"
                    android:textAlignment="center"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/cancel_btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#161F44"
                    android:minHeight="48dp"
                    android:text="Cancel"
                    android:textAlignment="center"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>