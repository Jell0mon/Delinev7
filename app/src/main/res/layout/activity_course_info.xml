<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161F44"
    tools:context=".CourseInfo">

    <TextView
        android:id="@+id/cn_trans_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/amiko_bold"
        android:paddingStart="10dp"
        android:text="Course"
        android:textAlignment="textStart"
        android:textColor="#88FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/course_info_card"
        android:layout_width="424dp"
        android:layout_height="592dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="50dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cn_trans_title"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:layout_width="412dp"
            android:layout_height="573dp"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="20dp"
            tools:layout_editor_absoluteX="-6dp"
            tools:layout_editor_absoluteY="155dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="175dp" />

            <TextView
                android:id="@+id/course_name_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="Course"
                android:textAlignment="textStart"
                android:textColor="#111111"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="194dp" />

            <TextView
                android:id="@+id/course_id_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="ID"
                android:textAlignment="textStart"
                android:textColor="#111111"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="227dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="254dp" />

            <TextView
                android:id="@+id/desc_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Description"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="273dp" />

            <TextView
                android:id="@+id/course_desc_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="AAAA BBB CCCC DDDD EEE FFFF GGGG HHHH III."
                android:textColor="#878787"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="313dp" />

            <TextView
                android:id="@+id/assign_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Assignments"
                android:textColor="#000000" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/course_assign_recycle"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="501dp" />

            <Button
                android:id="@+id/delete_course_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#161F44"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="Delete"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteX="170dp"
                tools:layout_editor_absoluteY="586dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>