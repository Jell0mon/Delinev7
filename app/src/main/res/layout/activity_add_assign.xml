<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".AddAssign">

    <ScrollView
        android:layout_width="416dp"
        android:layout_height="674dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add_assign_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Add Assignment"
                android:textColor="#5763B5"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="Title"
                android:textAlignment="textStart"
                android:textColor="#5763B5"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/assign_title_edit"
                android:layout_width="298dp"
                android:layout_height="51dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Title"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textColorHint="#A3A3A3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/typeof_assignment"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="Type of Assignment"
                android:textColor="#5763B5"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/assign_type"
                android:layout_width="304dp"
                android:layout_height="51dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Type"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textColorHint="#A3A3A3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="Choose a course."
                android:textColor="#5763B5"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="303dp"
                android:layout_height="59dp"
                android:layout_marginLeft="36dp"
                android:background="#DEDEDE" />

            <TextView
                android:id="@+id/due_date_title_ask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="Due Date"
                android:textColor="#5763B5"
                android:textStyle="bold" />

            <CalendarView
                android:id="@+id/date_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:background="#858585"
                android:backgroundTint="#828282"
                android:focusedMonthDateColor="#0D0D0C"
                android:selectedWeekBackgroundColor="#CD6363"
                android:unfocusedMonthDateColor="#DD4040"
                android:weekNumberColor="#AB2525"
                android:weekSeparatorLineColor="#D51E1E" />

            <TextView
                android:id="@+id/assign_descr_ask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="Description"
                android:textColor="#5763B5"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/assign_desc"
                android:layout_width="350dp"
                android:layout_height="131dp"
                android:layout_marginLeft="36dp"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Course description"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textColorHint="#A3A3A3" />

            <LinearLayout
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="36dp"
                android:foregroundGravity="center"
                android:gravity="center|left|center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="90dp">

                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="0dp"
                    android:layout_marginLeft="20dp"
                    android:background="#161F44"
                    android:foregroundGravity="clip_horizontal"
                    android:padding="0dp"
                    android:text="Submit"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_marginTop="160dp"
                    android:background="#161F44"
                    android:foregroundGravity="clip_horizontal"
                    android:padding="0dp"
                    android:text="Cancel"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>